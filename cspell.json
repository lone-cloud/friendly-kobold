{
  "version": "0.2",
  "language": "en",
  "dictionaryDefinitions": [
    {
      "name": "project-terms",
      "path": "./.cspell/project-terms.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "typescript",
    "node",
    "npm",
    "html",
    "css",
    "bash",
    "en-gb",
    "companies",
    "softwareTerms",
    "misc",
    "project-terms"
  ],
  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "dist-electron/**",
    "out/**",
    "release/**",
    "build/**",
    "*.min.js",
    "*.min.css",
    "package-lock.json",
    "**/*.log",
    "coverage/**",
    ".git/**",
    ".vscode/**",
    "*.map",
    ".cspell/**"
  ],
  "languageSettings": [
    {
      "languageId": "typescript,javascript",
      "caseSensitive": true,
      "dictionaries": ["typescript", "node", "npm", "softwareTerms"]
    },
    {
      "languageId": "css,scss,less",
      "dictionaries": ["css", "fonts"]
    },
    {
      "languageId": "html",
      "dictionaries": ["html", "css", "typescript"]
    }
  ],
  "overrides": [
    {
      "filename": "**/*.md",
      "dictionaries": ["en-gb", "typescript", "node", "npm", "companies"]
    },
    {
      "filename": "**/README.md",
      "words": ["github", "screenshot", "screenshots", "workflow", "workflows"]
    }
  ]
}
